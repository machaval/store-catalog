!!!
%html
  %head
    %title Store
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    #fb-root
      :javascript
        (function(d, s, id) {
          var js, fjs = d.getElementsByTagName(s)[0];
          if (d.getElementById(id)) return;
          js = d.createElement(s); js.id = id;
          js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=144562812353979";
          fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));

    .fb-login-button{:"data-show-faces" => true, :"data-width" => 200, :"data-max-rows" => 4,
                     :scope => "user_about_me, user_photos, user_website, email, publish_actions" }

    = yield

